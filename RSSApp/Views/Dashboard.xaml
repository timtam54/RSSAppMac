<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RSSApp.Views.Dashboard"
             Title="Dashboard">
    <VerticalStackLayout>
        <Label Text="Inspections"></Label>
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Margin="20" Spacing="100">
            <Button Text="Map View" Clicked="Button_MapView" ></Button>
            <ImageButton Source="rsslogo.png" Clicked="Button_MapView"></ImageButton>
             <Button Text="Tablular" Clicked="Button_Tabular" ></Button>
        </HorizontalStackLayout>
        <Label 
            Text="Roof Safety Solutions"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
